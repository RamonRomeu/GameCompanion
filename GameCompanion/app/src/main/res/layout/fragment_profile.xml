<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".fragment.ProfileFragment"
        android:gravity="center"
            android:orientation="vertical"
            android:background="@color/colorBackground"
>

    <!-- TODO: Update blank fragment layout -->


    <Button
            android:layout_marginBottom="10dp"
            android:id="@+id/registerButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_medium_height"
            android:layout_marginStart="@dimen/item_layout_margin"
            android:layout_marginEnd="@dimen/item_layout_margin"
            android:background="@drawable/button_border"
            android:text="@string/profile_register_button"
            android:fontFamily="@font/myriadbold"
            android:textColor="@color/colorWhite" />

    <Button
            android:layout_marginBottom="10dp"
            android:layout_marginStart="@dimen/item_layout_margin"
            android:layout_marginEnd="@dimen/item_layout_margin"
            android:textColor="@color/colorWhite"
            android:background="@drawable/button_border"
            android:id="@+id/logoutButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_medium_height"
            android:text="@string/profile_logout_button"
            android:fontFamily="@font/myriadbold"/>


    <!--DO DIMENS-->

    <Button
            android:layout_marginBottom="10dp"
            android:id="@+id/loginButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_medium_height"
            android:layout_marginStart="@dimen/item_layout_margin"
            android:layout_marginEnd="@dimen/item_layout_margin"
            android:background="@drawable/button_border"
            android:text="@string/profile_login_button"
            android:fontFamily="@font/myriadbold"
            android:textColor="@color/colorWhite" />

    <ImageView
            android:id="@+id/avatar"
            android:layout_width="113dp"
            android:layout_height="125dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_profile" />

    <TextView
            android:layout_marginBottom="10dp"
            android:textColor="@color/colorWhite"
            android:id="@+id/usernameTextView"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:fontFamily="@font/myriadregular"
            android:text="Hisadasdsa" />

    <Button
            android:id="@+id/takePicture"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/button_border"
            android:text="Update Picture"
            android:fontFamily="@font/myriadbold"
            android:textColor="@color/colorWhite" />

    <ProgressBar
            android:id="@+id/indeterminateBar"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:indeterminateTint="@color/colorStroke"
            android:visibility="gone" />

</LinearLayout>