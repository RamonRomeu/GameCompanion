<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".fragment.ProfileFragment"
            android:orientation="vertical"
>

    <!-- TODO: Update blank fragment layout -->


    <Button
            android:id="@+id/registerButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_medium_height"
            android:text="@string/profile_register_button"/>

    <Button
            android:id="@+id/logoutButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_medium_height"
            android:text="@string/profile_logout_button"/>


    <Button
            android:id="@+id/loginButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_medium_height"
            android:text="@string/profile_login_button" />

    <!--DO DIMENS-->
    <ImageView
            android:id="@+id/avatar"
            android:layout_width="113dp"
            android:layout_height="125dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_profile" />

    <TextView
            android:id="@+id/usernameTextView"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Hisadasdsa"/>

    <Button
            android:id="@+id/takePicture"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Update Picture"
            android:layout_gravity="center" />

    <ProgressBar
            android:id="@+id/indeterminateBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

</LinearLayout>